<div class="page-header">
  <h1>
    Tag issues
    <a href="/tag_issues/new" class="btn btn-lg btn-success">New Tag issue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Article</th>
        <th>Issue</th>
        <th>Actions</th>
      </tr>

      <% @tag_issues.each do |tag_issue| %>
      <tr>
        <td><%= tag_issue.article_id %></td>
        <td><%= tag_issue.issue_id %></td>
        <td>
          <a href="/tag_issues/<%= tag_issue.id %>" class="btn btn-primary">Show</a>
          <a href="/tag_issues/<%= tag_issue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tag_issue/<%= tag_issue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
