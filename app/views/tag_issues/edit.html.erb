<!-- Validation failure messages -->
<% if @tag_issue.errors.any? %>
  <% @tag_issue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tag Issue #<%= @tag_issue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tag_issue/<%= @tag_issue.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for article_id -->
      <div class="form-group">
        <label for="article_id" class="control-label">
          Article
        </label>

        <input type="text" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @tag_issue.article_id %>">
      </div>

      <!-- Label and input for issue_id -->
      <div class="form-group">
        <label for="issue_id" class="control-label">
          Issue
        </label>

        <input type="text" id="issue_id" name="issue_id" placeholder="Issue" class="form-control" value="<%= @tag_issue.issue_id %>">
      </div>

      <button class="btn btn-warning">
        Update Tag Issue
      </button>
      or
      <a href="/tag_issues/<%= @tag_issue.id %>">Cancel</a>
    </form>
  </div>
</div>
